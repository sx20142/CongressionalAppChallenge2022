<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    tools:context=".FirstSignUpActivity"
    android:orientation="vertical"
    android:padding="20dp">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:maxWidth="15dp"
        android:maxHeight="2dp"
        android:src="@drawable/logo_nowords"
        android:layout_marginTop="80dp"
        android:layout_gravity="center_horizontal"/>

    <!--find university text-->
    <TextView
        android:id="@+id/findUni_txt"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:text="Find your school:"
        android:textColor="#F8B503"
        android:textSize="36dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/hero_regular"
        android:textStyle="bold"
        />

    <!--university dropdown-->
    <!--<Spinner
        android:id="@+id/school_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        android:spinnerMode="dropdown" />-->
    <EditText
        android:id="@+id/school_input"
        android:layout_width="300dp"
        android:layout_height="62dp"
        android:layout_below="@+id/findUni_txt"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:hint="Texas schools..."

        android:textColorHint="#FFB900"
        app:boxBackgroundColor="@color/white" />

    <ListView
        android:id="@+id/school_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/school_input"
        android:layout_marginHorizontal="10dp"
        android:visibility="gone"/>

    <!--enter residential hall text-->
    <TextView
        android:id="@+id/enterResHall_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/school_spinner"
        android:text="Enter your residential hall:"
        android:textColor="#F8B503"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/hero_regular"/>

    <!--residential hall input-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/resHall_til"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/enterResHall_txt"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:textColorHint="#FFB900"
        app:boxBackgroundColor="@color/white">
        <EditText
            android:id="@+id/resHall_input"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Residential Hall"
            android:layout_gravity="center"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!--sign up button-->
    <Button
        android:id="@+id/signUp_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/resHall_til"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="40dp"
        android:text="Sign Up"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:cornerRadius="50dp"
        android:backgroundTint="@color/orange_yellow"/>

</LinearLayout>