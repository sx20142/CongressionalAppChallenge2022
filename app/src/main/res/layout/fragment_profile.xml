<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/white"
    tools:context=".ProfileFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardCornerRadius="50dp"
        android:layout_marginTop="130dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/avatarIv"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@color/light_gray"
            android:src="@drawable/ic_person" />
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="511dp"
        android:layout_marginTop="220dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="Name"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/schoolTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="3dp"
            android:text="School"
            android:textSize="18sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/hallTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Residential Hall"
            android:textStyle="italic"
            android:textSize="15sp"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/emailTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rectangle"
            android:text="Email"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/phoneTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/rectangle"
            android:text="Phone"
            android:paddingLeft="10dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Settings"
            android:textStyle="italic"
            android:paddingLeft="10dp"
            android:textColor="@color/black" />

    </LinearLayout>

    <!--Floating Action button-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="325dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_editpen"
        app:backgroundTint="@color/orange_yellow" />

    //option to switch on/off notifications
    <androidx.cardview.widget.CardView
        android:id="@+id/notificationsSwitch"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="580dp"
        app:contentPadding="10dp">

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notifications" />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/pwd"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="650dp"
        android:padding="10dp"
        android:text="Change Password"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:backgroundTint="#FFB900"
        app:cornerRadius="50dp" />

</androidx.cardview.widget.CardView>